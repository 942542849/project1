<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="dao.Book_Dao">    <!-- xml与接口dao关联 -->
 <select id="select" resultType="model.Book" parameterType="java.lang.String">
 	select* from book  ${_parameter}
 </select>
  <select id="selectById" resultType="model.Book" parameterType="int" >
	select * from book where book.id=#{id}
 </select>
 <insert id="insert" parameterType="model.Book">
	insert into book(name) values(#{name})
 </insert> 
 <update id="update" parameterType="model.Book">
	update book set name=#{name} where book.id=#{id}
 </update> 
 <delete id="delete" parameterType="model.Book">
	delete from book where id=#{id}
</delete>

 </mapper> 